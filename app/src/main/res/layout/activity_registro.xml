<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loggin"
    tools:context="com.andresvanegas.practica3.registroActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/erusuario"
        android:hint="Usuario"
        android:textAlignment="center"
        android:textColorHint="#963b41"
        android:layout_above="@+id/ercontra"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/ercontra" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ercontra"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:textColorHint="#963b41"
        android:inputType="textPassword"
        android:layout_above="@+id/erpcontra"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/erpcontra" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/erpcontra"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:textColorHint="#963b41"
        android:inputType="textPassword"
        android:layout_above="@+id/eemail"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eemail"
        android:hint="e-mail"
        android:textAlignment="center"
        android:textColorHint="#963b41"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/raceptar"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/raceptar"
        android:textStyle="bold"
        android:textColor="#963b41"
        android:layout_marginBottom="176dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textStyle="bold"
        android:id="@+id/rcancelar"
        android:textColor="#963b41"
        android:layout_alignTop="@+id/raceptar"
        android:layout_toEndOf="@+id/raceptar" />
</RelativeLayout>
